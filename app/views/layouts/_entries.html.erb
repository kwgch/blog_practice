<h1>Listing entries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.title %></td>
        <td><%= entry.body %></td>
        <td><%= link_to 'Show',      blog_entry_path(@blog.id, entry.id) %></td>
        <td><%= link_to 'Edit', edit_blog_entry_path(@blog.id, entry.id) %></td>
        <td><%= link_to 'Destroy', [@blog, entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_blog_entry_path(@blog) %>
